# Increase timeouts and retry settings
network-timeout=600000
fetch-retries=5
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000

# Use frozen lockfile for more reliable builds
prefer-frozen-lockfile=true

# Use npm registry directly
registry=https://registry.npmjs.org/

# Skip optional dependencies to speed up install
ignore-optional=true

# Disable package-lock updates during install
package-lock=false

# Disable audit during build
audit=false